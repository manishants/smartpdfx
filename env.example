# Backend access guard for superadmin API routes (set a strong random value)
SUPERADMIN_API_KEY=changeme-superadmin-key

# Superadmin login (session-based UI access)
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=changeme-password
NEXT_PUBLIC_SUPERADMIN_OPEN=false

# Google Service Account credentials (preferred for server-side GA4)
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"

# GA4 property
GA4_PROPERTY_ID=123456789

# Google Search Console site URL
GSC_SITE_URL=https://www.example.com/

# Choose auth method for GSC: "oauth" (recommended) or "service"
GSC_AUTH_METHOD=oauth

# GSC OAuth (use a refresh token generated via OAuth2)
GSC_OAUTH_CLIENT_ID=your-oauth-client-id
GSC_OAUTH_CLIENT_SECRET=your-oauth-client-secret
GSC_OAUTH_REDIRECT_URI=http://localhost:3000/api/gsc/oauth/callback
GSC_REFRESH_TOKEN=your-refresh-token

# Client-side only: used to send X-Admin-Key header from superadmin pages
# For production, prefer session-based auth; do not expose secrets.
NEXT_PUBLIC_SUPERADMIN_API_KEY=Rn5manish-superadmin-key